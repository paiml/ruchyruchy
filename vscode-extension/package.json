{
  "name": "ruchy",
  "displayName": "Ruchy Language Support",
  "description": "Language support for Ruchy programming language with LSP integration",
  "version": "0.1.0",
  "publisher": "paiml",
  "repository": {
    "type": "git",
    "url": "https://github.com/paiml/ruchyruchy"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "ruchy",
    "language",
    "lsp",
    "compiler"
  ],
  "activationEvents": [
    "onLanguage:ruchy"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ruchy",
        "aliases": [
          "Ruchy",
          "ruchy"
        ],
        "extensions": [
          ".ruchy"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ruchy",
        "scopeName": "source.ruchy",
        "path": "./syntaxes/ruchy.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Ruchy",
      "properties": {
        "ruchy.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Ruchy language server."
        },
        "ruchy.lsp.path": {
          "scope": "window",
          "type": "string",
          "default": "ruchylsp",
          "description": "Path to the Ruchy LSP server binary."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
