fun find_first_even(start: i32, end: i32) -> i32 {
    let mut current = start;
    while current <= end {
        if current % 2 == 0 {
            println("Found first even: {}", current);
            break;
        }
        current = current + 1;
    }
    current
}

fun main() {
    let result = find_first_even(7, 20);
    println("Result: {}", result);
}
