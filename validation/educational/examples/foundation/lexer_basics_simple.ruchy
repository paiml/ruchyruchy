}

fn test_lexer_creation() -> bool {
    println("ðŸ§ª Testing lexer creation...");
    
    let input = "let x = 42";
    let lexer = create_lexer(input);
    
    if lexer.input == input && lexer.position == 0 && lexer.line == 1 {
        println("   âœ… Lexer creation passed");
        true
    } else {
        println("   âŒ Lexer creation failed");
        false
    }
}

