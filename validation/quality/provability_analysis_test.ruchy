struct AbstractDomain {
    zero: i32,
    positive: i32,
    top: bool,
}

struct JoinResult {
    is_top: bool,
    is_nonnegative: bool,
}

struct TokenList {
    count: i32,
}

struct AST {
    valid: bool,
}

struct TypecheckResult {
    is_welltyped: bool,
}

struct CompileResult {
    success: bool,
}
