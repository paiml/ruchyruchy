fun calculate_mutation_score(killed: i32, total: i32) -> f64 {
    if total == 0 {
        return 0.0
    }
    return (killed as f64 / total as f64) * 100.0
}

// Supporting types

struct MutationResult {
    mutation_type: String,
    matches_expected: bool,
}

struct FuzzResults {
