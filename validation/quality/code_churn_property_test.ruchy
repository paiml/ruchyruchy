struct ChurnMetric {
    file: String,
    function: String,
    count: i32,
}

struct Failure {
    file: String,
    stage: String,
    count: i32,
}

struct StageChange {
    file: String,
    stage: String,
    timestamp: i32,
}

struct CyclicPattern {
    file: String,
    stage_count: i32,
}
