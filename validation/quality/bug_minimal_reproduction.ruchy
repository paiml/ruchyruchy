    println("🐛 MINIMAL Bug Reproduction")
    println("=" * 60)

    // Minimal test case
    let result = test_boolean_if()
    println("")
    println("Expected: 0.95")
    println("Actual: " + result.to_string())

    if result == 0.95 {
        println("✅ PASS")
