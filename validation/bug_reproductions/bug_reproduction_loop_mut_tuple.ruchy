// Minimal reproduction: loop with mut variables in function returning tuple
// Ruchy v3.94.0

fn test_loop_mut() -> (i32, i32) {
    let mut idx = 0;
    let mut sum = 0;

    loop {
        if idx >= 5 {
            break;
        }
        sum = sum + idx;
        idx = idx + 1;
    }

    (sum, idx)
}

fn main() {
    let result = test_loop_mut();
    let sum = result.0;
    let idx = result.1;

    println("Sum: {}, Index: {}", sum, idx);
}

main();
