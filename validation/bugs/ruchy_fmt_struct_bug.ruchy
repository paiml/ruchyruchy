// Minimal reproduction for ruchy fmt bug
// Bug: ruchy fmt reformats multi-line structs to invalid single-line syntax
// Steps:
//   1. ruchy check ruchy_fmt_struct_bug.ruchy  (should pass)
//   2. ruchy fmt ruchy_fmt_struct_bug.ruchy    (formats file)
//   3. ruchy check ruchy_fmt_struct_bug.ruchy  (FAILS with "Unexpected token: RightBrace")

struct Point {
    x: f64,
    y: f64,
}

struct Rectangle {
    width: f64,
    height: f64,
    color: String,
}

fun main() {
    let p = Point {
        x: 10.0,
        y: 20.0,
    }

    let r = Rectangle {
        width: 100.0,
        height: 50.0,
        color: "blue",
    }

    println("Point: (" + p.x.to_string() + ", " + p.y.to_string() + ")")
    println("Rectangle: " + r.width.to_string() + "x" + r.height.to_string())
}
