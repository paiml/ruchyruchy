                // Save the AST description
                let ast_desc = format!("{:?}", ast);
                write_program_to_file(
                    &ast_desc,
                    &format!("{}/ast_crash_{}.txt", FUZZ_DIR, i)
                ).expect("Failed to write crash AST file");
