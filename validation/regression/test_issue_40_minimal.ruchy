// Minimal test for Issue #40 fix
fun main() {
    println("Testing string iteration...");

    let s = "abc".to_string();
    let mut i = 0;

    loop {
        if i >= s.len() {
            break;
        }

        let ch_opt = s.chars().nth(i);
        match ch_opt {
            Some(c) => {
                println("Character {}: {}", i, c);
                i = i + 1;
            },
            None => break
        }
    }

    println("âœ… SUCCESS: Completed without hanging!");
    println("Issue #40 appears to be FIXED in v3.99.2!");
}

main();
