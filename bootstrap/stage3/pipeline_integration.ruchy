    println("Test: Compile integer to both targets");

    let source = "42".to_string();
    let ts_result = compile_to_typescript(source);
    let rust_result = compile_to_rust("42".to_string());

    if ts_result == "42" {
        if rust_result == "42" {
            println("  âœ… PASS");
            true
        } else {
            println("  âŒ FAIL: Rust result '{}'", rust_result);
            false
        }
    } else {
        println("  âŒ FAIL: TS result '{}'", ts_result);
        false
    }
}

