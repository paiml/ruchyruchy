// Test 1: Emit integer literal
fun test_emit_int() -> bool {
    println("Test: Emit integer literal");

    let expr = Expr::EInt(42);
    let result = emit_expr_rust(expr);

    if result == "42" {
        println("  ‚úÖ PASS");
        true
    } else {
        println("  ‚ùå FAIL: Expected '42', got '{}'", result);
        false
    }
}

