// Simple type kinds
enum TypeKind {
    Star,      // Regular types (*)
    Arrow      // Type constructors (* -> *)
}

// Effect types for tracking side effects
enum EffectType {
    Pure,
    IO,
    State,
    Async,
    Error
}

// Type constraint relations
enum ConstraintRelation {
    Equals,
    Subtype,
    Instance
}

struct TypeConstraint {
    left: str,
    right: str,
    relation: ConstraintRelation
}

